<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginRight="@dimen/view_padding_right"
    android:layout_marginLeft="@dimen/view_padding_left">
  <android.support.constraint.ConstraintLayout
      android:id="@+id/cl_day"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/between_items_padding_top"
      android:paddingBottom="@dimen/between_items_padding_bottom">
    <TextView
        android:id="@+id/tv_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_font"
        android:textColor="@color/textColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_high_temperature"
        app:layout_constraintHorizontal_weight="3"
    />
    <TextView
        android:id="@+id/tv_high_temperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_font"
        android:gravity="right"
        android:textColor="@color/textColor"
        app:layout_constraintLeft_toRightOf="@+id/tv_day"
        app:layout_constraintRight_toLeftOf="@+id/tv_low_temperature"
        app:layout_constraintHorizontal_weight="1"/>
    <TextView
        android:id="@+id/tv_low_temperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_font"
        android:textColor="@color/textColor"
        android:gravity="right"
        app:layout_constraintLeft_toRightOf="@+id/tv_high_temperature"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"/>
  </android.support.constraint.ConstraintLayout>
  <View
      android:id="@+id/divider"
      android:layout_width="match_parent"
      android:layout_height="@dimen/view_divider_height"
      android:background="@color/textColor"
      app:layout_constraintTop_toBottomOf="@id/cl_day"/>
  <LinearLayout
      android:id="@+id/ll_weather_details"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingTop="@dimen/between_items_padding_top"
      app:layout_constraintTop_toBottomOf="@id/divider">
  </LinearLayout>

</android.support.constraint.ConstraintLayout>