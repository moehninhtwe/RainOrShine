<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WeatherForecastActivity">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/pb_weather_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Oops something went wrong"
        android:textColor="@color/textColor"
        android:visibility="gone"
    />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_weather_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/view_padding_left"
        android:layout_marginRight="@dimen/view_padding_right"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:layout_centerInParent="false">
      <LinearLayout
          android:id="@+id/ll_today_summary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center">
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_font"
            android:textColor="@color/textColor"/>
        <TextView
            android:id="@+id/tv_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font"
            android:textColor="@color/textColor"
            android:paddingTop="@dimen/between_items_padding_top"/>
        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/between_items_padding_top"
            android:textColor="@color/textColor"
            android:textSize="@dimen/very_big_font"/>
      </LinearLayout>
      <android.support.constraint.ConstraintLayout
          android:id="@+id/cl_today_day"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="15dp"
          android:paddingBottom="@dimen/between_items_padding_bottom"
          app:layout_constraintTop_toBottomOf="@+id/ll_today_summary">
        <TextView
            android:id="@+id/tv_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font"
            android:textColor="@color/textColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_today"
            app:layout_constraintHorizontal_weight="3"
        />
        <TextView
            android:id="@+id/tv_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/today"
            android:textSize="@dimen/small_font"
            android:textColor="@color/textColor"
            app:layout_constraintLeft_toRightOf="@+id/tv_day"
            app:layout_constraintRight_toLeftOf="@+id/tv_high_temperature"
            app:layout_constraintHorizontal_weight="3"/>
        <TextView
            android:id="@+id/tv_high_temperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font"
            android:textColor="@color/textColor"
            android:gravity="right"
            app:layout_constraintLeft_toRightOf="@+id/tv_today"
            app:layout_constraintRight_toLeftOf="@+id/tv_low_temperature"
            app:layout_constraintHorizontal_weight="1"/>
        <TextView
            android:id="@+id/tv_low_temperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font"
            android:textColor="@color/textColor"
            android:gravity="right"
            app:layout_constraintLeft_toRightOf="@+id/tv_high_temperature"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"/>
      </android.support.constraint.ConstraintLayout>
      <View
          android:id="@+id/view_divider2"
          android:layout_width="match_parent"
          android:layout_height="@dimen/view_divider_height"
          android:paddingBottom="@dimen/between_items_padding_bottom"
          android:background="@color/textColor"
          app:layout_constraintTop_toBottomOf="@+id/cl_today_day"
      />
      <android.support.v7.widget.RecyclerView
          android:id="@+id/rv_hourly_forecast"
          android:scrollbars="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/between_items_padding_top"
          android:paddingBottom="@dimen/between_items_padding_bottom"
          app:layout_constraintTop_toBottomOf="@+id/view_divider2">
      </android.support.v7.widget.RecyclerView>
      <View
          android:id="@+id/view_divider1"
          android:layout_width="match_parent"
          android:layout_height="@dimen/view_divider_height"
          android:background="@color/textColor"
          android:paddingBottom="@dimen/between_items_padding_bottom"
          app:layout_constraintTop_toBottomOf="@+id/rv_hourly_forecast"
      />
      <android.support.v7.widget.RecyclerView
          android:id="@+id/rv_daily_forecast"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/between_items_padding_top"
          android:paddingBottom="@dimen/between_items_padding_bottom"
          app:layout_constraintTop_toBottomOf="@+id/view_divider1">
      </android.support.v7.widget.RecyclerView>
      <View
          android:id="@+id/view_divider"
          android:layout_width="match_parent"
          android:layout_height="@dimen/view_divider_height"
          android:background="@color/textColor"
          android:paddingBottom="@dimen/between_items_padding_bottom"
          app:layout_constraintTop_toBottomOf="@+id/rv_daily_forecast"
      />
      <LinearLayout
          android:id="@+id/ll_today_weather_details"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingTop="@dimen/between_items_padding_top"
          app:layout_constraintTop_toBottomOf="@+id/view_divider">
      </LinearLayout>
    </android.support.constraint.ConstraintLayout>
  </RelativeLayout>
</ScrollView>