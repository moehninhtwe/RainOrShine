<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect">
  <TextView
      android:id="@+id/tv_day"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textSize="@dimen/small_font"
      android:textColor="@color/textColor"
      android:paddingTop="12dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/iv_weather_icon"
      app:layout_constraintHorizontal_weight="3"
  />
  <ImageView
      android:id="@+id/iv_weather_icon"
      android:layout_width="0dp"
      android:layout_height="50dp"
      app:layout_constraintLeft_toRightOf="@+id/tv_day"
      app:layout_constraintRight_toLeftOf="@+id/tv_high_temperature"
      app:layout_constraintHorizontal_weight="2"
  />
  <TextView
      android:id="@+id/tv_high_temperature"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textSize="@dimen/small_font"
      android:textColor="@color/textColor"
      android:paddingTop="12dp"
      android:gravity="right"
      app:layout_constraintLeft_toRightOf="@+id/iv_weather_icon"
      app:layout_constraintRight_toLeftOf="@+id/tv_low_temperature"
      app:layout_constraintHorizontal_weight="1"
  />
  <TextView
      android:id="@+id/tv_low_temperature"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textSize="@dimen/small_font"
      android:textColor="@color/textColor"
      android:paddingTop="12dp"
      android:gravity="right"
      app:layout_constraintLeft_toRightOf="@+id/tv_high_temperature"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintHorizontal_weight="1"
  />

</android.support.constraint.ConstraintLayout>