<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <TextView
      android:id="@+id/tv_summary"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/textColor"
      android:textSize="@dimen/small_font"
      android:paddingBottom="@dimen/between_items_padding_bottom"/>
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/view_divider_height"
      android:background="@color/textColor"/>
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/between_items_padding_top">
    <LinearLayout
        android:id="@+id/ll_sunrise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll_sunset"
        app:layout_constraintHorizontal_weight="1">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/sunrise"
          android:textColor="@color/textColor"/>
      <TextView
          android:id="@+id/tv_sunrise"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/big_font"
          android:textColor="@color/textColor"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sunset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ll_sunrise"
        app:layout_constraintHorizontal_weight="1">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/sunset"
          android:textColor="@color/textColor"/>
      <TextView
          android:id="@+id/tv_sunset"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/big_font"
          android:textColor="@color/textColor"/>
    </LinearLayout>
  </android.support.constraint.ConstraintLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/view_divider_height"
      android:background="@color/textColor"/>
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/between_items_padding_top">
    <LinearLayout
        android:id="@+id/ll_chance_of_rain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll_humidity"
        app:layout_constraintHorizontal_weight="1">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/chance_of_rain"
          android:textColor="@color/textColor"/>
      <TextView
          android:id="@+id/tv_chance_of_rain"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/big_font"
          android:textColor="@color/textColor"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_humidity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ll_chance_of_rain"
        app:layout_constraintHorizontal_weight="1">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/humidity"
          android:textColor="@color/textColor"/>
      <TextView
          android:id="@+id/tv_humidity"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/big_font"
          android:textColor="@color/textColor"/>
    </LinearLayout>
  </android.support.constraint.ConstraintLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/textColor"/>
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/between_items_padding_top">
    <LinearLayout
        android:id="@+id/ll_wind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll_feels_like"
        app:layout_constraintHorizontal_weight="1">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/wind"
          android:textColor="@color/textColor"/>
      <TextView
          android:id="@+id/tv_wind"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/big_font"
          android:textColor="@color/textColor"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_feels_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ll_wind"
        app:layout_constraintHorizontal_weight="1">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/feels_like"
          android:textColor="@color/textColor"/>
      <TextView
          android:id="@+id/tv_feels_like"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/big_font"
          android:textColor="@color/textColor"/>
    </LinearLayout>
  </android.support.constraint.ConstraintLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/view_divider_height"
      android:background="@color/textColor"/>
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/between_items_padding_top">
    <LinearLayout
        android:id="@+id/ll_precipitation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll_pressure"
        app:layout_constraintHorizontal_weight="1">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/precipitation"
          android:textColor="@color/textColor"/>
      <TextView
          android:id="@+id/tv_precipitation"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/big_font"
          android:textColor="@color/textColor"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pressure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ll_precipitation"
        app:layout_constraintHorizontal_weight="1">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/pressure"
          android:textColor="@color/textColor"/>
      <TextView
          android:id="@+id/tv_pressure"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/big_font"
          android:textColor="@color/textColor"/>
    </LinearLayout>
  </android.support.constraint.ConstraintLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/view_divider_height"
      android:background="@color/textColor"/>
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="10dp">
    <LinearLayout
        android:id="@+id/ll_visibility"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll_uv_index"
        app:layout_constraintHorizontal_weight="1">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/visiblity"
          android:textColor="@color/textColor"/>
      <TextView
          android:id="@+id/tv_visibility"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/big_font"
          android:textColor="@color/textColor"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_uv_index"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ll_visibility"
        app:layout_constraintHorizontal_weight="1">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/uv_index"
          android:textColor="@color/textColor"/>
      <TextView
          android:id="@+id/tv_uv_index"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/big_font"
          android:textColor="@color/textColor"/>
    </LinearLayout>
  </android.support.constraint.ConstraintLayout>
</LinearLayout>